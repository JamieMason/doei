{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": ["${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}
